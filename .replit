modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["libyaml", "xcodebuild", "zlib", "mesa", "xorg.libX11", "xorg.libXext", "xorg.libXrender", "xorg.libXi", "xorg.libXtst", "fontconfig", "freetype", "libglvnd", "xvfb-run", "libxkbcommon", "zstd", "dbus"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ESPHome Component Manager"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "main"

[[workflows.workflow]]
name = "ESPHome Component Manager"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "QT_QPA_PLATFORM=offscreen xvfb-run -a python main.py"

[[workflows.workflow]]
name = "main"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/work && python main.py"
